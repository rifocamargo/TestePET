<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="TestePETPU">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>com.lecom.testepetdao.entity.Cliente</class>
    <class>com.lecom.testepetdao.entity.ClienteServico</class>
    <class>com.lecom.testepetdao.entity.Perfil</class>
    <class>com.lecom.testepetdao.entity.PessoaFisica</class>
    <class>com.lecom.testepetdao.entity.PessoaJuridica</class>
    <class>com.lecom.testepetdao.entity.Servico</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/teste_pet?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="user_pet"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="admin"/>
    </properties>
  </persistence-unit>
</persistence>
